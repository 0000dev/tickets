{% extends 'base.html.twig' %}

{% block body %}

	<h3> {{ category[0].cats }} </h3>

{% for cat in category %}

	
		<div class="pure-g">
			<div class="pure-u-1 setborder margintop15 padding10">
				<div class="pure-g">
					<div class="pure-u-1 pure-u-sm-2-5 pure-u-md-1-5">
						<a href="/{{cat.id}}/{{cat.name|trim|replace({" ":"-", ".":""})}}"><img class="vertical-align" src="{% if cat.image|length > 0 %} {{cat.image}} {% else %} /img/noimage.jpg {% endif %}" width="95%" /></a>
					</div>
					<div class="pure-u-1 pure-u-sm-3-5 pure-u-md-4-5">
						<strong><a href="/{{cat.id}}/{{cat.name|trim|replace({" ":"-", ".":""})}}">{{cat.name}}</a></strong>
						<p>{{ cat.description|length > 300 ? cat.description|slice(0, 300) ~ '...' : cat.description }}</p>
					</div>
				</div>
			</div>
		</div>
	

{% endfor %}

{% if next_page == true %}
<div class="pure-g">
	<div class="pure-u-1 setborder margintop15 padding10">
		{% set next_page = curr_page + 1 %}
		<a href="/category/{{cat_id}}/{{next_page}}">Next</a>
	</div>
</div>
{% endif %}

{% endblock %}