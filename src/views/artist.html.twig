{% if artist.images|length > 0 %}
	<div class="pure-g">
		<div class="pure-u-1">
			<h4>{{artist.name}} Concert & Tour Photos</h4>	
			<div class="artistphotosblock{% if artist.images|length < 5 %} smallphotoblock{% endif %}">
				<p id="photos">
			      	{% for image in artist.images %}

			      		<a href="/{{artist.id}}/img/{{ image|replace({'.jpg':''}) }}"><img src="http://photos-eu.bazaarvoice.com/photo/2/cGhvdG86dGlja2V0bWFzdGVy/{{ image }}"></a>

