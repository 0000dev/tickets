{% if artist.comments|length > 0 %}

	<div class="pure-g">
		<div class="pure-u-1">
			<h4>Fan Reviews</h4>
		</div>
	</div>

	{% for comment in artist.comments %}

	<div class="pure-g comments">
		<div class="pure-u-1">
			<div  class="stars">
				{% for i in 1..comment.rating %}
					★
				{% endfor %}
				{% if comment.rating<5 %}
					{% for i in 1..5-comment.rating %}
						☆
					{% endfor %}
				{% endif %}
			</div> 

			<div class="username"><strong>{{ comment.author }}</strong></div>
			<div class="feebacktext">
			{{ comment.text|replace({'\\u2019':"'",'\\u201d':'','\\u201c':'','\\u2013':' ','\\n':"<br>"}) }}
			</div>
			<span class="placeandtime">{{ comment.details }}</span>
		</div>
	</div>

			{% if comment == artist.comments[2] %}
				<div class="neighbors">
				{% for neighbor in artist.neighbors %}
					<a href="/{{neighbor['id']}}/{{neighbor['name']|trim|replace({" ":"-"})}}">{{neighbor['name']}} Reviews</a> {% if loop.last == false %} :: {% endif %}
				{% endfor %}
				</div>
			{% endif %}
		
	{% endfor %}

{% endif %}

{% if artist.comments|length < 3 %}
	<div class="neighbors margintop15">
		{% for neighbor in artist.neighbors %}
			<a href="/{{neighbor['id']}}/{{neighbor['name']|trim|replace({" ":"-"})}}">{{neighbor['name']}}</a> {% if loop.last == false %} :: {% endif %}
		{% endfor %}
	</div>
{% endif %}


<div class="pure-g">
	<div class="pure-u-1">
		[Temporary disabled] {{artist.name}} needs your feedback
	</div>
</div>

<div class="pure-g">
	<div class="pure-u-1 pure-u-md-1-2">

		<form class="pure-form" action="#" method="POST">
		    <fieldset class="pure-group">
		        <input name="feedback_name" type="text" class="pure-input-1" placeholder="Your Name">
		        <input name="feedback_email" type="email" class="pure-input-1" placeholder="Email">
		    </fieldset>
		    <span class="rating">
		        <input name="feedback_rate" type="radio" class="rating-input" id="rating-input-1-5" name="rating-input-1"/>
		        <label for="rating-input-1-5" class="rating-star"></label>
		        <input name="feedback_rate" type="radio" class="rating-input" id="rating-input-1-4" name="rating-input-1"/>
		        <label for="rating-input-1-4" class="rating-star"></label>
		        <input name="feedback_rate" type="radio" class="rating-input" id="rating-input-1-3" name="rating-input-1"/>
		        <label for="rating-input-1-3" class="rating-star"></label>
		        <input name="feedback_rate" type="radio" class="rating-input" id="rating-input-1-2" name="rating-input-1"/>
		        <label for="rating-input-1-2" class="rating-star"></label>
		        <input name="feedback_rate" type="radio" class="rating-input" id="rating-input-1-1" name="rating-input-1"/>
		        <label for="rating-input-1-1" class="rating-star"></label>
			</span>

		    <fieldset class="pure-group">
		        <input name="feedback_title" type="text" class="pure-input-1" placeholder="Title">
		        <textarea name="feedback_text" class="pure-input-1" placeholder="Your feedback"></textarea>
		    </fieldset>

		    <button disabled type="submit" class="pure-button pure-input-1 pure-button-primary">Temporary disabled. Coming back soon!</button>
		</form>

	</div>
</div>

<script type="text/javascript">
$( document ).ready(function() {
	$( "input.rating-input" ).click(function() {
		name=$(this).attr('name');
		$("input[name='"+name+"']").val(""); // remove value from all radio's (with this name)
		$("input[name='"+name+"']:checked").val($(this).attr('id')); // add value to checked radio
	});
});
</script>


{% endblock %}

 