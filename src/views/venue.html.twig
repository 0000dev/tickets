{% extends 'base.html.twig' %}

{% block title %}{{ venue.name }} Tickets{% endblock %}

{% block body %}

<div class="pure-g header">
	<div class="pure-u-1">
		<h1>{{venue.name}}</h1>
	</div>
</div>

<br>

<div class="pure-g toppanel">
	<div class="pure-u-1 pure-u-sm-3-5">
		<center>
			<p>
				<div class="venueimage">
				 
				<img src="{% if venue.image_small|length > 0 %} {{venue.image_small}} {% else %} /img/noimage.jpg {% endif %}"/>
		 
				</div>
				{{venue.address}}
			</p>


		</center>
	</div>
	<div class="pure-u-1 pure-u-sm-2-5">
		<center>
			<p><img src="/img/badge-ad.jpg"></p>
		</center>
	</div>
</div>

<div class="pure-g">
	<div class="pure-u-1">
		{% for key,value in venue.details %}
			<p><b>{{key|replace({"Detail":"","phoneN":"Phone n","openH":"Open h","acceptedP":"Accepted p","willC":"Will c"})}}</b> : {{value}}</p>
		{% endfor %}
	</div>
</div>


{% set cols = 2 %}
{% for s in venue.schedule_data %}
	{% if loop.index0 % cols == 0 %}
		<div class="pure-g ">
		{% endif %}
		<div class="pure-u-1 pure-u-md-1-2">
			<div class="pure-g ">
				<div style="margin:5px;border:1px solid #ddd;width:100%">
					<div class="pure-u-2-5 venueouter">
						<img class="vertical-align" src="{{s.image}}" width="100%" style="max-width:200px;">
					</div>
					<div class="pure-u-3-5">
						<div style="padding:5px;font-size:12px;">
							<div class="venueitem"> <img src="https://cdn4.iconfinder.com/data/icons/miu/24/common-star-favorite-bookmark-glyph-512.png" width="10px"> {{s.name}}</div>
							<img src="https://cdn2.iconfinder.com/data/icons/wirecons-free-vector-icons/32/475340-alarm-clock-512.png" width="10px"> {{s.date}} <br>
							<img src="https://cdn2.iconfinder.com/data/icons/freecns-cumulus/16/519586-083_Music-512.png" width="10px"> Genre: {{s.genre}} <br>
							{# <p>{{s.info}} </p> #}
							<img src="https://cdn0.iconfinder.com/data/icons/layout-and-location/24/Untitled-2-34-512.png" width="10px"> Price: {{s.price.min}} {{s.price.currency}} {% if s.price.max != s.price.min %} - max: {{s.price.max}} {{s.price.currency}} {% endif %} <br>
							<a href="http://href.li/?{{s.url}}"><img width="100px" src="http://localhost:8000/img/tmlogo_grey.png"></a>
						</div>
					</div>
				</div>
			</div>
		</div>
		{% if (loop.index0 % cols == cols - 1 or loop.last) %}
		</div>
	{% endif %}
{% endfor %}
 
 <div class="pure-g">
	<div class="pure-u-1">
		{% if neighbors|length > 0 %}
			<div class="neighbors margintop15">
				{% for neighbor in neighbors %}
					<a href="/venue/{{neighbor['id']}}/{{neighbor['name']|trim|replace({" ":"-", ".":""})}}">{{neighbor['name']}}</a> {% if loop.last == false %} :: {% endif %}
				{% endfor %}
			</div>
		{% endif %}
	</div>
</div>

{% endblock %}