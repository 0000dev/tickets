<!doctype html>
<html lang="en">

<head>
    <title>{% block title %}FansVoice. We need to hear your voice{% endblock %}</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="/css/pure-min.css">
        <link rel="stylesheet" type="text/css" href="/css/pure-extend.css">
        <!--[if lte IE 8]>
            <link rel="stylesheet" href="/css/grids-responsive-old-ie-min.css">
        <![endif]-->
        <!--[if gt IE 8]><!-->
            <link rel="stylesheet" type="text/css" href="/css/grids-responsive-min.css">
        <!--<![endif]-->
        <link rel="stylesheet" type="text/css" href="/css/tickets.css">
        <link rel="stylesheet" type="text/css" href="/css/tabs.css">

		<link rel="stylesheet" type="text/css" href="/css/slick/slick.css"/>
		<link rel="stylesheet" type="text/css" href="/css/slick/slick-theme.css"/>

		<script type="text/javascript" src="//code.jquery.com/jquery-1.11.0.min.js"></script>
		<script type="text/javascript" src="/js/slick/slick.min.js"></script>

    {% endblock %}
</head>

<body>

	<div class="homepage bigheader" id="bigheader">

		<form  action="/search" method="POST">
			<div class="searchlinediv">
			<div class="searchlinediv"> 
				<input name="search" placeholder=" &nbsp; What are you looking for?" onkeydown="if (event.keyCode == 13) myFunction(this.value)" type="text" />
			</div>
			</div>
		</form>
	 
	</div>
 
<div class="content">

	<div class="slickslider">
	{% for comment in comments %}

		<div class="pure-g comments margintop15">

			

			<div class="pure-u-1-4">
				<img alt="{{ comment.artists_name }} Image" src="{{ comment.artists_image }}" width="90%" />
			</div>
			<div class="pure-u-3-4">
				<div class="commentsheader"><a href="/{{ comment.artists_id }}/{{ comment.artists_name|trim|replace({" ":"-", ".":"", "/":"","+":""})}}">{{ comment.artists_name }}</a></div>
				<div  class="stars">
					{% for i in 1..comment.rating %}
						★
					{% endfor %}
					{% if comment.rating<5 %}
						{% for i in 1..5-comment.rating %}
							☆
						{% endfor %}
					{% endif %}
				</div> 

				<div class="username"><strong>{{ comment.author }}</strong></div>
				<div class="feebacktext">
				


					{{ comment.text|length > 300 ? comment.text|slice(0, 300) ~ '...' : comment.text|replace({'\\u2019':"'",'\\u201d':'','\\u201c':'','\\u2013':' ','\\n':"<br>"}) }}
				</div>
				<span class="placeandtime">{{ comment.details }}</span>
			</div>
		</div>

	{% endfor %}
	</div>

	<div class="pure-g">
		<div class="pure-u-1">
	 
			<div class="home artistphotosblock">
				<p class="photos">

			    {% for a in artists %}
			    	<a href="/{{a.id}}/{{a.name|trim|replace({" ":"-", ".":"", "/":"","+":""})}}"><img alt="{{a.name}}" src="{{a.image}}" title="{{a.name}}" /></a>
			    {% endfor %}
			      
				</p>
			</div>
		</div>
	</div>

	<div class="pure-g">
		<div class="pure-u-1">
	 		
	 		<h4>Latest Added Venues</h4>

			<div class="home artistphotosblock">
				<p class="photos">

			    {% for a in venues %}
			    	<a href="/venue/{{a.id}}/{{a.name|trim|replace({" ":"-", ".":"", "/":"","+":""})}}"><img src="{{a.image}}" title="{{a.name}}" /></a>
			    {% endfor %}
			      
				</p>
			</div>
		</div>
	</div>
 

</div>

<div class="darkfooter">
	<div class="content">

		<div class="pure-g">
			
			<div class="pure-u-1-3">

				<b>Popular Categories</b>
				<ul>
					
						<li><a href="/category/16">Rock & Pop</a></li>
						<li><a href="/category/18">Musicals</a></li>
						<li><a href="/category/19">Rap & Hip-Hop</a></li>
						<li><a href="/category/20">Alternative Rock</a></li>
					
				</ul>
			</div>


			<div class="pure-u-1-3">
				
				<b>Recently added</b>
				<div class="slickslider">
				

				{% set cols = 3 %}
				{% for f in footer_links %}
					{% if loop.index0 % cols == 0 %}
						<div>
						<ul>
					{% endif %}

					<li><a href="/{{f.id}}/{{f.name|trim|replace({" ":"-", ".":"", "/":"","+":""})}}">{{f.name}}</a></li>

					{% if (loop.index0 % cols == cols - 1 or loop.last) %}
						</ul>
						</div>
					{% endif %}

				{% endfor %}

			
				</div>

			</div>

			<div class="pure-u-1-3">

				<b>More information</b>
				<ul>
					
						<li><a href="/page/about">About us</a></li>
						<li><a href="/page/privacy-policy">Privacy Policy</a></li>
						<li><a href="/page/contact">Contact</a></li>
					
				</ul>
			</div>

		</div>

	</div>
</div>

<script type="text/javascript">
    $(document).ready(function(){
	  $('.slickslider').slick({
		slidesToShow: 1,
		slidesToScroll: 1,
		autoplay: true,
		autoplaySpeed: 2000,
		dots: false,
	    prevArrow: false,
	    nextArrow: false
	  });
	});

	document.getElementById("bigheader").style.height = "100vh";
</script>

</body>

</html>
