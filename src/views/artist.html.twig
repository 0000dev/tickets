{% extends 'base.html.twig' %}

{% block body %}
<div class="content">
 

<!-- top header menu / better to do with native menu? -->
<div class="custom-wrapper pure-g" id="menu">
	<div class="pure-u-1 pure-u-md-1-5">
		<div class="pure-menu">
			<a href="#" class="pure-menu-heading custom-brand">Brand</a>
			<a href="#" class="custom-toggle" id="toggle"><s class="bar"></s><s class="bar"></s></a>
		</div>
	</div>
	<div class="pure-u-1 pure-u-md-2-5">
		<div class="pure-menu pure-menu-horizontal custom-can-transform">
			
				<form class="pure-form"><input type="text" class="pure-input-rounded"></form>
			
		</div>
	</div>
	<div class="pure-u-1 pure-u-md-2-5">
		<div class="pure-menu pure-menu-horizontal custom-menu-3 custom-can-transform">
			<ul class="pure-menu-list">
				<li class="pure-menu-item"><a href="#" class="pure-menu-link">Yahoo</a></li>
				<li class="pure-menu-item"><a href="#" class="pure-menu-link">W3C</a></li>
				<li class="pure-menu-item"><a href="#" class="pure-menu-link">Yahoo</a></li>
				<li class="pure-menu-item"><a href="#" class="pure-menu-link">W3C</a></li>
			</ul>
		</div>
	</div>
</div>


<div class="pure-g header">
	<div class="pure-u-1">
		<h1>{{artist.name}}</h1>

		<div class="crumps">
			{% for category in artist.cats %}
				{{category}} {% if loop.last == false %} > {% endif %}
			{% endfor %}
		</div>
		
	</div>
</div>


<div class="pure-g toppanel">
	<div class="pure-u-1 pure-u-sm-3-5">
		<center>
			<p>
				<div class="artistimage">
				 
				<img class="vertical-align" src="{{artist.image}}"/>
		 
				</div>
			</p>
		</center>
	</div>
	<div class="pure-u-1 pure-u-sm-2-5">
		<center>
			<p><img src="http://www.npdf.org/wp-content/uploads//2014/02/badge-ad.jpg"></p>
		</center>
	</div>
</div>

<div class="pure-g">
	<div class="pure-u-1">
		<div class="pc-tab">
			<input checked="checked" id="tab1" type="radio" name="pct" />
			<input id="tab2" type="radio" name="pct" />
			<input id="tab3" type="radio" name="pct" />
			  <nav class="xs-hide">
			    <ul>
			      <li class="tab1">
			        <label for="tab1">{{artist.name}}</label>
			      </li>
			      <li class="tab2">
			        <label for="tab2">Photos from Shows</label>
			      </li>
			    </ul>
			  </nav>
			  <section>
			    <div class="tab1">
			       
			      	{{artist.description}}
			      
			    </div>

			    <div class="tab2">
			      <p id="photos">
			      	{% for image in artist.images %}
			      		<img src="http://photos-eu.bazaarvoice.com/photo/2/cGhvdG86dGlja2V0bWFzdGVy/{{ image }}">
			      	{% endfor %}
			      </p>
			    </div>
			  </section>
		</div>
	</div>
</div>


<div class="pure-g">
	<div class="pure-u-1">
		<h4>Visitors' feedback</h4>
	</div>
</div>


{% for neighbor in artist.neighbors %}
	<a href="/{{neighbor['id']}}/{{neighbor['name']|trim|replace({" ":"-"})}}">{{neighbor['name']}}</a> :: 
{% endfor %}

{% for comment in artist.comments %}

<div class="pure-g comments">
	<div class="pure-u-1">
		<div  class="stars">
			{% for i in 1..comment.rating %}
				★
			{% endfor %}
			{% if comment.rating<5 %}
				{% for i in 1..5-comment.rating %}
					☆
				{% endfor %}
			{% endif %}
		</div> 

		<div class="username"><strong>Anonymous</strong></div>
		<div class="feebacktext">
		{{ comment.text }}
		</div>
		<span class="placeandtime">{{ comment.details }}</span>
	</div>
</div>

{% endfor %}
 


<footer>
	<p>
	[some footer]
	</p>	
</footer>


</div>


{% endblock %}

 